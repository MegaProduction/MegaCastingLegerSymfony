{% extends 'base.html.twig' %}

{% block title %}MegaCasting | Accueil{% endblock %}

{% block body %}
<div class="carousel slide" data-bs-ride="carousel" id="Carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
     {% for key in offre|slice(0, 1) %}
        <div class="text-center">
            <h5>{% trans %}Une nouvelle offre {% endtrans %}({{ key.getIntitule }}){% trans %} vient d'être ajoutée{% endtrans %}</h5>
            <p>{{ key.getIdentifiantcontrat.getLibelle }}</p>
            <a class="btn btn-info" href="/casting/{{ key.identifiant }}">Voir les détails ...</a>
        </div>
     {% endfor %}
    </div>
    <div class="carousel-item">
      {% for key in offre|slice(1, 1) %}
      <div class="text-center">
          <h5>{% trans %}Une nouvelle offre {% endtrans %}({{ key.getIntitule }}){% trans %} vient d'être ajoutée{% endtrans %}</h5>
          <p>{{ key.getIdentifiantcontrat.getLibelle }}</p>
          <a class="btn btn-info" href="/casting/{{ key.identifiant }}">Voir les détails ...</a>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
  <div>
    <h3>{% trans %}Megacasting : comment ça marche ?{% endtrans %}</h3>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">{% trans %}Début{% endtrans %}</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">{% trans %}Profil{% endtrans %}</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#postuler" type="button" role="tab" aria-controls="postuler" aria-selected="false">{% trans %}Postuler{% endtrans %}</button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">{% trans %}Consulter les offres qui vous intéressent.{% endtrans %}</div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">{% trans %}Inscrivez-vous ou connectez-vous pour pouvoir postuler.{% endtrans %}</div>
      <div class="tab-pane fade" id="postuler" role="tabpanel" aria-labelledby="postuler-tab">{% trans %}Postuler sur le site pour n'importe quelle casting.{% endtrans %}</div>
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js"
    integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous">
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"
    integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous">
</script>
<script src="https://use.fontawesome.com/releases/v5.1.1/js/all.js"></script>
<script src={{ asset('script/carousel.js') }}></script>
{% endblock %}